{% extends 'base.html.twig' %}

{% block title "Applications | ATOS" %}

{% block body %}

<div class="mt-5 pt-4 title">
    <h2 class="text-center">ATOS | Apply for job</h2>
</div>
    {# {{form_start(form)}}
        {{form_widget(form)}}
        <input type="button" value="submit">
    {{form_end(form)}} #}


<div class="d-flex justify-content-center">
    <form class="mt-3 row col-md-10 g-3">
        <div class="col-md-2">
            <label for="" class="form-label">Gender</label>
            <div class="row row-cols-md-auto d-flex align-items-center">
                <div class="form-check">
                    <label class="form-check-label" for="flexRadioDefault1">Male</label>
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                </div>
                <div class="form-check">
                    <label class="form-check-label" for="flexRadioDefault2">Female</label>
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault2" checked>
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <label for="firstname" class="form-label">Frist Name</label>
            <input type="text" class="form-control" id="firstname">
        </div>
        <div class="col-md-5">
            <label for="lastname" class="form-label">Last Name</label>
            <input type="text" class="form-control" id="lastname">
        </div>
        <div class="col-md-4">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" placeholder="johndoe@example.com">
        </div>
        <div class="col-md-2">
            <label for="phone" class="form-label">Phone</label>
            <input type="tel" class="form-control" id="phone" placeholder="77 123 45 67">
        </div>
        <div class="col-md-6">
            <label for="profession" class="form-label">Apply as</label>
            <select class="form-select" name="profession" id="profession">
                <option value="">Other</option>
                <option value="">UI Designer</option>
                <option value="">Software Engineer</option>
                <option value="">Front end Developer</option>
                <option value="">Back end Developer</option>
                <option value="">Database Administrator</option>
            </select>
        </div>
        <div class="col-md-4">
            <label for="experience_years" class="form-label">Expreience Years</label>
            <input class="form-control" type="number" min="0" name="experience_years" id="experience_years">
        </div>
        <div class="col">
            <label for="formFile" class="form-label">Upload resume</label>
            <input class="form-control" aria-label="Select file" type="file" id="formFile">
        </div>
        <div class="col-12">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="gridCheck">
                <label class="form-check-label" for="gridCheck">Allow ATOS to save your data and join you if needs arise.</label>
            </div>
        </div>
        <div class="mt-5 col-12">
            <button type="submit" class="btn btn-lg btn-primary w-100">Apply</button>
        </div>
    </form>
</div>    

{% endblock %}
